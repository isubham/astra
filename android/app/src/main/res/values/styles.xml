<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/primaryTextColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/navigationBarColor
        </item>
        <item name="hintTextColor">@color/colorHint</item>
    </style>
    s
    <!--app bar main header and sub header as well as visible menu text(secondary) -->
    <style name="MyCustomToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/menuTextColor</item>
        <item name="android:textColorSecondary">@color/colorGrey</item>


    </style>


    <!--Menu popup's background and text Color-->
    <style name="MyCustomPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/menuBackgroundColor</item>
        <item name="android:textColor">@color/menuTextColor</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint" tools:targetApi="lollipop">
            @color/colorPrimaryDark
        </item>
        <item name="android:progressTint" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:minWidth">200dp</item>
    </style>


    <style name="baseFulWidthElement" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/material_element_margin</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="ActivityDialog" parent="Theme.AppCompat.Light.Dialog.MinWidth" />

    <style name="disableButton" parent="baseFulWidthElement">
        <item name="android:textColor">@color/disabledText</item>
        <item name="android:backgroundTint">@color/disabled</item>
    </style>


    <style name="baseFulWidthElementWithSmallText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>


    </style>


    <style name="activeButton" parent="baseFulWidthElement">
        <item name="android:textColor">@color/activeText</item>
        <item name="android:backgroundTint">@color/active</item>
    </style>


    <style name="progressgButton" parent="baseFulWidthElement">
        <item name="android:textColor">@color/progressText</item>
        <item name="android:backgroundTint">@color/progress</item>
    </style>

    <style name="successButton" parent="baseFulWidthElement">
        <item name="android:textColor">@color/sucessText</item>
        <item name="android:backgroundTint">@color/sucess</item>
    </style>

    <style name="dangerButton" parent="baseFulWidthElement">
        <item name="android:textColor">@color/dangerText</item>
        <item name="android:backgroundTint">@color/danger</item>
    </style>
    <!--    Custom SnackBar TextView Style-->
    <style name="CustomSnackBarTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/snackbar_textview_textSize</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>

    <!--    Custom SnackBar Ation Button Style-->
    <style name="CustomSnackBarActionButtonStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/snackbar_button_textSize</item>
        <item name="android:textColor">@color/colorOffWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

