    <TextView
        android:id="@+id/textView_search_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_padding"
        android:layout_marginBottom="76dp"
        android:padding="@dimen/app_padding"
        android:text="@string/search_general_user"
        android:textSize="@dimen/text_heading_one"
        app:layout_constraintBottom_toTopOf="@+id/general_user_til_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.697">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/general_user_til_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_padding"
        android:background="@color/lightGrey"
        android:padding="@dimen/app_padding"
        app:layout_constraintBottom_toTopOf="@+id/general_user_til_dob"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/general_user_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_general_user_name"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/general_user_til_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        app:hintTextAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toTopOf="@+id/general_user_til_father_name"
        tools:layout_editor_absoluteX="0dp"
        android:padding="@dimen/app_padding"
        android:background="@color/lightGrey"
        android:layout_margin="@dimen/app_padding"

       >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/general_user_et_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_general_user_dob"
            android:cursorVisible="false"
            android:clickable="true"
            android:focusable="false" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/general_user_til_father_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_padding"
        android:background="@color/lightGrey"
        android:padding="@dimen/app_padding"
        app:hintTextAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709"
        tools:layout_editor_absoluteX="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/general_user_et_father_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_general_fathers_name" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/genera_uset_bt_search_user"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/app_padding"
        android:background="@color/colorPrimaryDark"
        android:onClick="searchUser"
        android:padding="@dimen/app_padding"
        android:drawableLeft="@drawable/outline_search_black_36"
        android:drawableTint="@color/colorWhite"
        android:text="Search user"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/button_heading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/general_user_til_father_name"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>